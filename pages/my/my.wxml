<view class="container">
    <image src='/images/my/my@bg.png' class='bg'></image>
    <!--<open-data type="userAvatarUrl" class="avatar avatar-position"></open-data>-->
    <w-button wx:if="{{!authorized}}" open-type='getUserInfo' class="avatar-position" bind:getuserinfo="onGetUserInfo">
        <image slot="img" class="avatar" src="/images/my/my.png" />
    </w-button>
    <view wx:if="{{authorized}}" class="avatar-container avatar-position">
        <image src="{{userInfo.avatarUrl}}" class="avatar"></image>
        <text>{{userInfo.nickName}}</text>
    </view>
    <view class='about-container'>
        <view bind:tap="onJumpToAbou" class='about-us'>
            <image src='/images/my/about.png'></image>
            <text class='description'>关于我</text>
        </view>
        <view class='about-us'>
            <text class="book-num">{{bookCount}}</text>
            <text class='description'>喜欢的书</text>
        </view>
    </view>
    <!--<button open-type='getUserInfo' bindgetuserinfo='getUserInfo'>授权</button>-->

    <view class='like-container'>
        <image class='headline' src='../../images/my/like.png'></image>
        <view class="preview-container">
            <block wx:for="{{classics}}" wx:key="">
                <w-preview bind:tapping="onJumpToDetail" class="preview" classic="{{item}}" />
            </block>
        </view>
    </view>
    
</view>

