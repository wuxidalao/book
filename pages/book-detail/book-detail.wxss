.container {
    background-color: #f5f5f5;
    width: 100%;
}

.head {
    background: #fff;
    padding-top: 40rpx;
    padding-bottom: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    color: #2f2f2f;
    margin-top: 20rpx;
    font-size: 38rpx;
    font-weight: 600;
}

.author {
    font-size: 28rpx;
    color: #999;
}

.head image {
    width: 200rpx;
    height: 300rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.sub-container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 30rpx;
    background: #fff;
    padding: 0 0 30rpx 0;
}

.headline {
    font-size: 30rpx;
    font-weight: 600;
    color: #2f2f2f;
    margin: 20rpx;
}

.comment-container {
    width: 690rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.comment-container w-tag {
    margin: 10rpx 6rpx;
}

.num {
    font-size: 22rpx;
    margin-left: 10rpx;
    color: #aaa;
}


