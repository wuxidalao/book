.ex-tag1 {
    background: #fffbdd !important;
}

.ex-tag2 {
    background: #eefbff !important;
}

.content {
    line-height: 50rpx;
    font-size: 30rpx;
    text-indent: 58rpx;
    padding: 0 25rpx;
}

.detail-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    font-size: 28rpx;
    margin: 0 0 100rpx 40rpx;
}

.vertical {
    display: flex;
    flex-direction: column;
}

.description {
    margin-right: 40rpx;
}

.post-containder {
    height: 100rpx;
    width: 690rpx;
    position: fixed;
    box-shadow: 1px -1px 1px #e3e3e3;
    background: #fff;
    bottom: 0;
    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 0 30rpx;
    justify-content: space-between;
}

.post-fake {
    width: 460rpx;
    height: 60rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border: solid 1px #999;
    border-radius: 15px;
    font-size: 22rpx;
    padding-left: 20rpx;
}

.like-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.like {
    margin: 10rpx 30rpx 0 0;
}

.posting-container {
    width: 100%;
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    bottom: 0;
    z-index: 999;
    background: #fff;
}

.post-header {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    border-bottom: solid 1px #f5f5f5;
    border-top: solid 1px #f5f5f5;
}

.post-header text {
    padding: 25rpx;
}

.post-header>text:first-child {
    font-size: 28rpx;
    color: #bbb;
}

.cancel {
    color: #666;
}

.posting-container .comment-container {
    width: 690rpx;
    padding: 40rpx 30rpx 0 30rpx;
}

.post {
    width: 690rpx;
    height: 56rpx;
    margin: 30rpx auto;
    background: #f5f5f5;
    border-radius: 15px;
    padding-left: 25rpx;
}

.shadow {
    color: #999;
}